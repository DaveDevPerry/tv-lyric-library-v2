<a class="btn btn-add" href="/songs/new">Add Song</a>

<br />
<div>
	<% songs.forEach(song => { %>
	<div class="song-heading"><%= song.title %></div>
	<ul>
		<% song.splitLyrics.forEach((lyric)=>{ %>
		<li>
			<form action="/lyric" method="POST" class="form-grow">
				<div class="form-row">
					<label>lyric</label>
					<input type="text" name="lyric" value="<%= lyric %>" />

					<div class="btn-grid">
						<a class="btn btn-danger" href="/lyric">Cancel</a>
						<button class="btn btn-primary" type="submit">Create</button>
					</div>
				</div>
			</form>
		</li>
		<% }) %>
	</ul>

	<% }) %>
</div>

<br />
<% songs.forEach(song => { %>
<div class="song-row">
	<div class="song-title"><%= song %></div>
	<div class="song-title"><%= song.title %></div>

	<div class="btn-row">
		<a class="btn btn-primary" href="/songs/<%= song.id %>">View</a>
		<a class="btn btn-primary" href="/songs/<%= song.id %>/edit">Edit</a>
		<%- include('../partials/deleteForm', {url: `/songs/${song.id}` }) %>
	</div>
</div>

<% }) %>
