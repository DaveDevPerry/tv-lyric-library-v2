<h2 class="page-header"><%= song.title %></h2>
<h2 class="page-header"><%= song.lineCount %> Lines</h2>
<h2 class="page-header"><%= song.id %> song id</h2>

<div>
	<br />

	<!-- works -->

	<ul>
		<% songLyrics.forEach((line) => { %>
		<li>
			line <%= line.lineNumber %> - <%= line.lyric %> - Likes <%= line.likeCount
			%>
		</li>
		<% }) %>
	</ul>

	<br />

	<ul>
		<% songLyrics.forEach((lyric)=>{ %>
		<li>
			<form action="/lyric" method="POST" class="form-grow">
				<div class="form-row">
					<label><%= lyric.lineNumber %>:</label>&nbsp;
					<input type="text" name="lyric" value="<%= lyric.lyric %>" />
					&nbsp;<i class="fas fa-thumbs-up"></i>
					<span class="blue"><%= lyric.likeCount %></span>

					<div class="btn-grid">
						<button class="btn btn-primary" type="submit">Create</button>
					</div>
				</div>
			</form>
		</li>
		<% }) %>
	</ul>

	<br />
	<ul>
		<% songLyrics.forEach((lyric)=>{ %>
		<li>
			<form action="/lyric" method="POST" class="form-grow">
				<div class="form-row">
					<p><%= lyric.lineNumber %>:</p>
					&nbsp;
					<select name="lyric">
						<% songLyrics.forEach(lyric => { %> <% if(lyric.id === song.lyric) {
						%>
						<option selected value="<%= lyric.id %>">
							<p><%= lyric.lyric %><span><%= lyric.likeCount %></span></p>
						</option>
						<% } else { %>
						<option value="<%= lyric.id %>">
							<p><%= lyric.lyric %> here<span><%= lyric.likeCount %></span></p>
						</option>
						<% } %> <% }) %>
					</select>
					<input
						type="text"
						name="lyric"
						value="<% lyric.lyric %>"
						placeholder="add new lyric here, if not listed above"
						class="input-create"
					/>
					<div class="btn-grid">
						<button class="btn btn-primary" type="submit">Create</button>
					</div>
				</div>
			</form>
		</li>
		<% }) %>
	</ul>
</div>

<div class="btn-row">
	<a class="btn btn-primary" href="/songs/<%= song.id %>/edit">Edit</a>
	<%- include('../partials/deleteForm', {url: `/songs/${song.id}` }) %>
</div>

